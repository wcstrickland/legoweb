{{template "head"}}
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="col-md-6 offset-md-1 col-xl-6 ">
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title my-5">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="my-3">
              <label class="form-label" for="uname">Username</label>
              <input
                class="form-control"
                type="text"
                id="uname"
                name="uname"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success btn-block my-5">Login</button>
            <a href="/" class="btn btn-primary btn-block my-5">Go Back</a>
          </form>
        </div>
      </div>
    </div>
</div>
{{template "foot"}}
